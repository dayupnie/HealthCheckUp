<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:example="http://schemas.android.com/apk/res/com.example.healthcheckup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/person_rl_title"
        android:layout_width="match_parent"
        android:layout_height="50dip" >
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/person_rl_userpic"
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:orientation="vertical"
        android:layout_marginBottom="15dip" >

        <com.example.view.RoundImageViewByXfermode
            android:id="@+id/person_img_portrait"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:layout_gravity="center"
            android:src="@drawable/three"
            example:type="circle" />

        <TextView
            android:id="@+id/person_bt_eidt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="昵称"
            android:textColor="@color/mid_gray"
            android:textSize="18sp"
             />

    </LinearLayout>
<!-- 
  <ListView 
        android:id="@+id/person_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         >
    </ListView>
 --> 
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:background="@drawable/shape_rectangle">
 <!-- 自定义一个模块 -->
	 <LinearLayout
		 android:id="@+id/person_aleterInfo"
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:orientation="horizontal"
		 android:background="@drawable/press_change"
		 >
	       <TextView 
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_weight="1"
	           android:padding="10dip"
	           android:textSize="20sp"
	           android:textColor="@color/mid_gray"
	           android:background="@null"
	           android:text="修改资料"/>
	       <ImageView
	           android:id="@+id/person_img"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:background="@drawable/right_arrow"
	           android:contentDescription="image"
	           android:layout_marginRight="20dip"
	           android:layout_marginTop="20dip"
	            />
	       </LinearLayout>
 <!-- 自定义一个模块 -->
	 <LinearLayout
		 android:id="@+id/person_aleterPassword"
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:orientation="horizontal"
		 android:background="@drawable/press_change"
	     >
	     <TextView
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_weight="1"
	         android:padding="10dip"
	         android:text="更改密码"
	         android:textColor="@color/mid_gray"
	         android:textSize="20sp" />

        <ImageView
            android:id="@+id/person_img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/right_arrow"
            android:contentDescription="image"
            android:layout_marginRight="20dip"
            android:layout_marginTop="20dip"
             />
	 </LinearLayout>
 <!-- 自定义一个模块 -->
	 <LinearLayout
		 android:id="@+id/person_feedBack"
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:orientation="horizontal"
		 android:background="@drawable/press_change"
	     >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dip"
            android:textSize="20sp"
	        android:textColor="@color/mid_gray"
            android:text="意见反馈"/>
        <ImageView
            android:id="@+id/person_img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/right_arrow"
            android:contentDescription="image"
            android:layout_marginRight="20dip"
            android:layout_marginTop="20dip"
             />
	 </LinearLayout>
 <!-- 自定义一个模块 -->
	 <LinearLayout
		 android:id="@+id/person_updateVersion"
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:orientation="horizontal"
		 android:background="@drawable/press_change"
	     >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dip"
            android:textSize="20sp"
            android:textColor="@color/mid_gray"
            android:text="版本更新"/>
        <ImageView
            android:id="@+id/person_img3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/right_arrow"
            android:contentDescription="image"
            android:layout_marginRight="20dip"
            android:layout_marginTop="20dip"
             />
	 </LinearLayout>
 <!-- 自定义一个模块 -->
	 <LinearLayout
		 android:id="@+id/person_aboutUs"
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:orientation="horizontal"
		 android:background="@drawable/press_change"
	     >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dip"
            android:textSize="20sp"
            android:textColor="@color/mid_gray"
            android:text="关于我们"/>
        <ImageView
            android:id="@+id/person_img4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/right_arrow"
            android:contentDescription="image"
            android:layout_marginRight="20dip"
            android:layout_marginTop="20dip"
             />
	 </LinearLayout>
</LinearLayout>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="10dip"
	    android:background="@color/fill"/>
 <!-- 自定义一个模块 -->
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     android:background="@drawable/shape_rectangle">
	 <LinearLayout
		 android:id="@+id/person_exit"
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:orientation="horizontal"
	     android:background="@drawable/press_change"
	     >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dip"
            android:textSize="20sp"
            android:textColor="@color/mid_gray"
            android:gravity="center"
            android:text="退出账号"/>
	 </LinearLayout>
</LinearLayout>
</LinearLayout>